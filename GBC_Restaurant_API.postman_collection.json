{
  "info": {
    "name": "GBC Restaurant API - Production Ready",
    "description": "Complete API collection for testing the GBC Restaurant App backend integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://api.gbc-restaurant.com",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "device_id",
      "value": "test_device_{{$randomUUID}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access_token);",
                  "    pm.collectionVariables.set('refresh_token', response.refresh_token);",
                  "    pm.test('Login successful', () => {",
                  "        pm.expect(response.access_token).to.not.be.empty;",
                  "        pm.expect(response.user.id).to.not.be.empty;",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-API-Version",
                "value": "1.0"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"gbc@generalbilimoria.com\",\n  \"password\": \"GBC@123\",\n  \"device_id\": \"{{device_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access_token);",
                  "    pm.test('Token refresh successful', () => {",
                  "        pm.expect(response.access_token).to.not.be.empty;",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\",\n  \"device_id\": \"{{device_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/refresh",
              "host": ["{{base_url}}"],
              "path": ["auth", "refresh"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"device_id\": \"{{device_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Get Orders",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/orders?limit=50",
              "host": ["{{base_url}}"],
              "path": ["orders"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "since",
                  "value": "{{$timestamp}}",
                  "disabled": true
                },
                {
                  "key": "status",
                  "value": "pending",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Single Order",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}"]
            }
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Idempotency-Key",
                "value": "update_{{order_id}}_{{$timestamp}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"ready\",\n  \"updatedAt\": {{$timestamp}},\n  \"notes\": \"Order ready for pickup\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}"]
            }
          }
        },
        {
          "name": "Create Test Order",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('order_id', response.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Idempotency-Key",
                "value": "create_order_{{$timestamp}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderNumber\": \"GBC-{{$timestamp}}\",\n  \"customerName\": \"Test Customer\",\n  \"customerPhone\": \"+1234567890\",\n  \"items\": [\n    {\n      \"id\": \"item_1\",\n      \"name\": \"Masala Tea\",\n      \"quantity\": 2,\n      \"price\": 15.00,\n      \"notes\": \"Extra sugar\"\n    },\n    {\n      \"id\": \"item_2\",\n      \"name\": \"Samosa\",\n      \"quantity\": 3,\n      \"price\": 25.00\n    }\n  ],\n  \"total\": 105.00,\n  \"status\": \"pending\",\n  \"tableNumber\": \"T5\",\n  \"notes\": \"Test order from Postman\",\n  \"restaurantId\": \"gbc-restaurant-001\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            }
          }
        }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        {
          "name": "Get Notifications",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/notifications?limit=20",
              "host": ["{{base_url}}"],
              "path": ["notifications"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "unread_only",
                  "value": "true",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Mark Notification as Read",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Idempotency-Key",
                "value": "read_{{notification_id}}_{{$timestamp}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isRead\": true,\n  \"readAt\": {{$timestamp}}\n}"
            },
            "url": {
              "raw": "{{base_url}}/notifications/{{notification_id}}",
              "host": ["{{base_url}}"],
              "path": ["notifications", "{{notification_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Printing",
      "item": [
        {
          "name": "Submit Print Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Idempotency-Key",
                "value": "print_{{order_id}}_{{$timestamp}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"{{order_id}}\",\n  \"type\": \"receipt\",\n  \"printData\": {\n    \"orderNumber\": \"GBC-{{$timestamp}}\",\n    \"customerName\": \"Test Customer\",\n    \"items\": [\n      {\n        \"name\": \"Masala Tea\",\n        \"quantity\": 2,\n        \"price\": 15.00\n      }\n    ],\n    \"total\": 30.00,\n    \"timestamp\": {{$timestamp}}\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/print",
              "host": ["{{base_url}}"],
              "path": ["print"]
            }
          }
        }
      ]
    },
    {
      "name": "Device Management",
      "item": [
        {
          "name": "Register Device",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Idempotency-Key",
                "value": "register_{{device_id}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"deviceId\": \"{{device_id}}\",\n  \"pushToken\": \"test_push_token_{{$randomUUID}}\",\n  \"platform\": \"android\",\n  \"appVersion\": \"1.0.0\",\n  \"registeredAt\": {{$timestamp}}\n}"
            },
            "url": {
              "raw": "{{base_url}}/devices/register",
              "host": ["{{base_url}}"],
              "path": ["devices", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "Real-time Events",
      "item": [
        {
          "name": "Poll Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/events/poll?since={{$timestamp}}",
              "host": ["{{base_url}}"],
              "path": ["events", "poll"],
              "query": [
                {
                  "key": "since",
                  "value": "{{$timestamp}}"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "item": [
        {
          "name": "API Health",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Auth Health",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/health",
              "host": ["{{base_url}}"],
              "path": ["auth", "health"]
            }
          }
        }
      ]
    }
  ]
}
